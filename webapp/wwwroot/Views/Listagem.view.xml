<mvc:View
  controllerName="webapp.Controllers.Listagem"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
>
  <App id="app">
    <Page>
      <customHeader>
        <Toolbar>
          <Title text="KNOWLED" class="sapUiTinyMarginBegin"/>
          <ToolbarSpacer/>
          <Button icon="sap-icon://add-coursebook" text="Adicionar livro"/>
        </Toolbar>
      </customHeader>

      <FlexBox class="sapUiMediumMarginEnd sapUiMediumMarginTop sapUiMediumMarginBegin sapUiMediumMarginBottom">
        <FlexBox justifyContent="Start" alignItems="Start" width="100%" >
            <List id="listaDeLivrosLidos"
                  headerText="Livros lidos"
                  items="{livrosLidos>/}"
                  growing="true">
                  
                  <Title text="Livros para ler"/>
                  <!-- <OverflowToolbar>
                    <SearchField width="50%"/>
                    <Label icon="sap-icon://search"/>
                  </OverflowToolbar> -->
                  <items>
                    <StandardListItem 
                      title="{livrosLidos>titulo}"
                      description="{livrosLidos>autor}"
                      press=".aoPressionarLivroLidos"
                      type="Navigation"/>
                  </items>
                  <layoutData>
                      <FlexItemData growFactor="0" baseSize="90%" />
                  </layoutData>
            </List>
        </FlexBox>

        <FlexBox justifyContent="End" alignItems="Start" width="100%">
            <List id="listaDeLivrosParaLer"
                  headerText="Livros para ler"
                  items="{livrosParaLer>/}"
                  growing="true">
                  
                  <Title text="Livros para ler"/>
                  <!-- <OverflowToolbar>
                    <SearchField width="50%"/>
                  </OverflowToolbar> -->
                  <items>
                    <StandardListItem 
                      title="{livrosParaLer>titulo}"
                      description="{livrosParaLer>autor}"
                      press=".aoPressionarLivroParaLer"
                      type="Navigation"/>
                  </items>
                  <layoutData>
                      <FlexItemData growFactor="0" baseSize="90%" />
                  </layoutData>
            </List>
        </FlexBox>
      </FlexBox>
      
    </Page>
  </App>
</mvc:View>